{{!
    @template local/certiflex/templates/setting_configdatetimepicker

    Shows setting widget

    Context variables required for this template:
    * certificates

    Example context (json):
    {
        certificates: [
            {
                "fullname": "Course A",
                "date": "28/10/2021 12:00:00",
                "code": "xyz"
            }
        ]
    }
}}
<div class="form-time defaultsnext text-ltr ">
    <label class="accesshide" for="{{id}}d">{{#str}}date{{/str}}</label>
    <input type="text" value="{{date}}" id="{{id}}d" name="{{name}}[date]" style='width: 120px; display: inline; margin-right: 5px' />
    <label class="accesshide" for="{{id}}h">{{#str}}hours{{/str}}</label>
    <select id="{{id}}h" name="{{name}}[h]">
        {{#hours}}
            <option value="{{value}}" {{#selected}}selected{{/selected}}>{{name}}</option>
        {{/hours}}
    </select>:
    <label class="accesshide" for="{{id}}m">{{#str}}minutes{{/str}}</label>
    <select id="{{id}}m" name="{{name}}[m]">
        {{#minutes}}
            <option value="{{value}}" {{#selected}}selected{{/selected}}>{{name}}</option>
        {{/minutes}}
    </select>
</div>